<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_batiz"
        android:onClick="onClickMoveBatiz"
        android:id="@+id/btn_batiz"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_actual"
        android:id="@+id/btn_actual"
        android:onClick="onClickMoveActual"
        android:layout_above="@+id/btn_batiz"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_esca"
        android:id="@+id/btn_esca"
        android:onClick="onClickMoveESCA"
        android:layout_alignTop="@+id/btn_actual"
        android:layout_toRightOf="@+id/btn_actual"
        android:layout_toEndOf="@+id/btn_actual" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_escom"
        android:id="@+id/btn_escom"
        android:onClick="onClickMoveESCOM"
        android:layout_above="@+id/btn_esfm"
        android:layout_toLeftOf="@+id/btn_upiita"
        android:layout_toStartOf="@+id/btn_upiita" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_upicsa"
        android:id="@+id/btn_upicsa"
        android:onClick="onClickMoveUPICSA"
        android:layout_alignTop="@+id/btn_batiz"
        android:layout_toRightOf="@+id/btn_batiz"
        android:layout_toEndOf="@+id/btn_batiz" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_upiita"
        android:id="@+id/btn_upiita"
        android:onClick="onClickMoveUPIITA"
        android:layout_above="@+id/btn_marcador"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_esfm"
        android:id="@+id/btn_esfm"
        android:onClick="onClickMoveESFM"
        android:layout_alignTop="@+id/btn_marcador"
        android:layout_toLeftOf="@+id/btn_marcador"
        android:layout_toStartOf="@+id/btn_marcador" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_marcador"
        android:id="@+id/btn_marcador"
        android:onClick="onClickAddMarker"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
