<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">

    <set android:ordering="together">
        <objectAnimator
            android:duration="2000"
            android:propertyName="scaleX"
            android:valueFrom="2.0"
            android:valueTo="1.0" />
        <objectAnimator
            android:duration="2000"
            android:propertyName="scaleY"
            android:valueFrom="2.0"
            android:valueTo="1.0" />
    </set>

    <objectAnimator
        android:duration="2000"
        android:propertyName="rotation"
        android:valueFrom="0"
        android:valueTo="360" />

    <set android:ordering="together">
        <objectAnimator
            android:propertyName="x"
            android:duration="2000"
            android:valueTo="86" />
        <objectAnimator
            android:propertyName="y"
            android:duration="2000"
            android:valueTo="116" />
    </set>

    <objectAnimator
        android:duration="2000"
        android:propertyName="alpha"
        android:valueFrom="1"
        android:valueTo="0" />
    <objectAnimator
        android:duration="2000"
        android:propertyName="alpha"
        android:valueFrom="0"
        android:valueTo="1" />

    <objectAnimator
        android:duration="2000"
        android:propertyName="rotation"
        android:valueFrom="0"
        android:valueTo="315" />

</set>